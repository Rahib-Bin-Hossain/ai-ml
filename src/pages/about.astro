---
import Layout from '../layouts/Layout.astro';
import SectionHeader from '../components/SectionHeader.astro';
import Card from '../components/Card.astro';

// Page meta
const title = "About Us";
const description = "Information about our team members and research project at Islamic University of Technology (IUT).";
---

<Layout title={title} description={description}>
  <section class="bg-neutral-50 py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeader 
        title="About Our Team"
        subtitle="The researchers behind the Fake News Detection project"
        alignment="center"
      />
      
      <!-- Team Members -->
      <div class="mb-16">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Team Member 1 -->
          <div class="bg-white rounded-lg shadow-sm overflow-hidden transition-transform duration-300">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-primary-700 mb-1">MD. RAHIB BIN HOSSAIN</h3>
              <p class="text-neutral-500 text-sm mb-4">
                ID: 200021241
              </p>
            </div>
          </div>
          
          <!-- Team Member 2 -->
          <div class="bg-white rounded-lg shadow-sm overflow-hidden transition-transform duration-300">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-primary-700 mb-1">WERE SHURAIM</h3>
              <p class="text-neutral-500 text-sm mb-4">
                ID: 200021252
              </p>
            </div>
          </div>
          
          <!-- Team Member 3 -->
          <div class="bg-white rounded-lg shadow-sm overflow-hidden transition-transform duration-300">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-primary-700 mb-1">ZAKARIAOU IBRAHIM</h3>
              <p class="text-neutral-500 text-sm mb-4">
                ID: 200021262
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Instructor -->
      <div class="mb-16">
        <h3 class="text-2xl font-semibold text-primary-700 mb-6 text-center">Course Instructor</h3>
        <div class="max-w-xl mx-auto bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="p-6">
            <h3 class="text-xl font-semibold text-primary-700 mb-1">Md Arefin Rabbi Emon</h3>
            <p class="text-neutral-500 text-sm mb-4">Lecturer, EEE Department</p>
          </div>
        </div>
      </div>
      
      <!-- Institution -->
      <div class="mb-16">
        <h3 class="text-2xl font-semibold text-primary-700 mb-6 text-center">Our Institution</h3>
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="p-8">
            <h3 class="text-2xl font-semibold text-primary-700 mb-3">Islamic University of Technology (IUT)</h3>
            <div class="space-y-4">
              <div>
                <h4 class="text-lg font-medium text-neutral-800 mb-2">Department of Electrical and Electronic Engineering (EEE)</h4>
              </div>
              <div>
                <h4 class="text-lg font-medium text-neutral-800 mb-2">Course: Artificial Intelligence and Machine Learning</h4>
              </div>
            </div>
            <div class="mt-6 flex justify-end">
              <a 
                href="https://www.iutoic-dhaka.edu/" 
                target="_blank" 
                rel="noopener noreferrer" 
                class="text-primary-600 hover:text-primary-800 font-medium flex items-center"
              >
                Visit University Website
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Project Acknowledgments -->
      <div>
        <h3 class="text-2xl font-semibold text-primary-700 mb-6 text-center">Acknowledgments</h3>
        <div class="bg-neutral-100 p-8 rounded-lg">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <Card title="Academic Support" borderColor="border-primary-300">
              <p class="text-neutral-700 text-sm">
                We thank the faculty and staff of the Department of Electrical and Electronic Engineering (EEE) at IUT.
              </p>
            </Card>
            
            <Card title="Data Resources" borderColor="border-primary-300">
              <p class="text-neutral-700 text-sm">
                Our appreciation goes to the creators and maintainers of the public datasets used in this research.
              </p>
            </Card>
            
            <Card title="Open Source Community" borderColor="border-primary-300">
              <p class="text-neutral-700 text-sm">
                We acknowledge the open-source software and libraries that made our implementation possible.
              </p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
